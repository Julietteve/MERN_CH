{{#if usuario}}  

    <div class="form-group m-5">
    <h4>Vista de Productos</h4>
     <h1 class="display-4" >Bievenido {{usuario}}</h1>

    <form action="/logout" method="get" class="form-horizontal" role="form">
        <div class="form-group last" style="margin-bottom:0px;">
          <div class="col-sm-offset-3 col-sm-9">
            <input type="hidden" name="form" value="1" />
            <button type="submit" type="button" class="btn btn-link" style="color: forestgreen;">
              Desloguearse
              </button>
          </div>
        </div>
    </form>
    </div>
{{else}}
    <p>Vista de Productos</p>

    <div class="form-group">
        <label>Usuario no Logeado</label>
    </div>

{{/if}}

{{#if products}}

    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">title</th>
            <th scope="col">price</th>
            <th scope="col">thumbnail</th>
            </tr>
        </thead>
        <tbody>

        {{#each products}}

            <tr>
                <th scope="row">{{id}}</th>
                <td>{{title}}</td>
                <td>{{price}}</td>
                {{#if thumbnail}}
                <td>

                    <img width="20%" class="img-thumbnail" src={{{thumbnail}}} alt="" />
                </td>
                {{/if}}
            </tr>

        {{/each}}

        </tbody>
    </table>

{{else}}

    <p>No hay products</p>

{{/if}}
